<%= simple_form_for(@provider) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs row">
    <%= f.input :name, wrapper_html: { class: "col-md-5" }  %>
    <%= f.input :prefix, wrapper_html: { class: "col-md-5" }  %>
    <%= f.input :permalink, wrapper_html: { class: "col-md-5" }  %>
    <%= f.input :link, wrapper_html: { class: "col-md-5" }  %>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit , class: "btn btn-outline-success" %>
    <%= link_to 'Back', providers_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
